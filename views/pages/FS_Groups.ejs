<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/FS_Standard_Head'); %>
    <title>Groups - Fellowships</title>
    <link rel="stylesheet" href="/css/FS_Groups.css">
</head>

<header>
  <%- include('../partials/FS_Header'); %>
</header>

<div class="main-content-wrapper">
  <body>
    <div class="main_div">
      <main class="groups-list container">
        <h1>Groups</h1>
        <% if (Array.isArray(groups) && groups.length) { %>
          <% groups.forEach(g => { %>
            <div class="group-item">
              <a href="/groups/<%= encodeURIComponent(g.id) %>"><%= g.name %></a>
            </div>
          <% }) %>
        <% } else { %>
          <p>No groups found.</p>
        <% } %>
      </main>
    </div>
  </body>
</div>

<footer>
    <%- include('../partials/FS_Footer') %>
</footer>

</html>