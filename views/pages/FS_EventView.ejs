<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/FS_Standard_Head'); %>
    <title><%= event.title %> - Fellowships</title>
    <link rel="stylesheet" href="/css/FS_Events.css" />
    <script src="/js/FS_EventView.js" defer></script>
  </head>

  <header><%- include('../partials/FS_Header'); %></header>

  <div class="main-content-wrapper">
    <body>
      <div class="main_div">
        <main class="container events-list">
          <div class="events-header-row">
            <div class="page_header" id="txt_eventTitle">
              <%= event.title %>
            </div>

            <% const isCreator = (typeof userId !== 'undefined' &&
            event.creator_id && Number(userId) === Number(event.creator_id)); %>
            <% if (isCreator) { %>
            <div class="d-flex gap-2">
              <a
                href="/events/<%= event.id %>"
                class="btn btn-primary create-event-btn"
              >
                Edit event <i class="bi bi-pencil"></i>
              </a>

              <!-- button to open upload modal -->
              <button
                id="openUploadModalBtn"
                class="btn btn-primary create-event-btn"
              >
                Add resources <i class="bi bi-upload"></i>
              </button>
            </div>
            <% } %>
          </div>
          <hr />

          <section class="event-details">
            <!-- Group badge above date -->
            <div class="mb-2">
              <small
                class="badge bg-light text-muted"
                title="<%= event.group_name %>"
                id="txt_eventGroup"
              >
                <a
                  href="/groups/<%= event.group_id %>"
                  class="bg-light text-muted"
                  style="font-size: 18px; text-decoration: none"
                  ><%= event.group_name %>
                </a>
              </small>
            </div>

            <!-- Date -->
            <div class="mb-2">
              <strong>Date:</strong>
              <span
                ><span id="txt_eventDateStart"><%= event.start %></span>
                <% if (event.end) { %> —
                <span id="txt_eventDateEnd"><%= event.end %></span>
                <% } %></span
              >
            </div>

            <!-- Location -->
            <div class="mb-2" id="txt_eventLocation">
              <strong>Location:</strong>
              <% if (event.lat && event.lng) { %>
              <a
                href="/map?lat=<%= event.lat %>&lng=<%= event.lng %>&label=<%= encodeURIComponent(event.location) %>"
              >
                <%= event.location %>
              </a>
              <% } else { %>
              <span><%= event.location || "—" %></span>
              <% } %>
            </div>

            <!-- Description -->
            <% if (event.description) { %>
            <div class="mb-3">
              <strong>Description:</strong>
              <p id="txt_eventDescription"><%= event.description %></p>
            </div>
            <% } %>

            <!-- Status -->
            <div class="mb-3">
              <strong>Status:</strong>
              <span class="bg-light text-muted"><%= event.status %></span>
            </div>

            <!-- Attendance controls -->
            <div class="mb-3">
              <label class="form-label"><strong>Your attendance</strong></label>
              <div
                id="attendanceControls"
                class="d-flex gap-2 align-items-center"
              >
                <div class="form-check">
                  <input class="form-check-input attendance-radio" type="radio"
                  name="attendance" id="att_going" value="going" <%=
                  myAttendance === 'going' ? 'checked' : '' %> />
                  <label class="form-check-label" for="att_going">Going</label>
                </div>
                <div class="form-check">
                  <input class="form-check-input attendance-radio" type="radio"
                  name="attendance" id="att_interested" value="interested" <%=
                  myAttendance === 'interested' ? 'checked' : '' %> />
                  <label class="form-check-label" for="att_interested"
                    >Interested</label
                  >
                </div>
                <div class="form-check">
                  <input class="form-check-input attendance-radio" type="radio"
                  name="attendance" id="att_declined" value="declined" <%=
                  myAttendance === 'declined' ? 'checked' : '' %> />
                  <label class="form-check-label" for="att_declined"
                    >Declined</label
                  >
                </div>

                <button id="saveAttendanceBtn" class="btn btn-primary btn-sm">
                  Save
                </button>
                <button
                  id="viewAttendeesBtn"
                  class="btn btn-outline-secondary btn-sm"
                >
                  View attendees
                </button>
              </div>
            </div>

            <div id="attendanceMsg" class="mt-2"></div>

            <!-- Google calender & pdf download -->
            <div class="mb-3">
              <button id="saveToCalenderBtn" class="btn btn-primary btn-sm">
                Save to calender
              </button>
              <button class="btn btn-primary btn-sm">Download pdf</button>
            </div>
          </section>

          <section id="event-resources-section" class="mt-4">
            <h4>Resources</h4>
            <div id="event-resources-list" class="d-flex flex-column gap-3">
              <!-- resource cards injected here by JS -->
              <div id="resources-loading" class="text-muted">
                Loading resources…
              </div>
            </div>
          </section>

          <!-- Attendees modal -->
          <div
            class="modal fade"
            id="attendeesModal"
            tabindex="-1"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-scrollable">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Attendees</h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body" id="attendeesList">
                  <!-- Filled by JS -->
                  <div class="text-center text-muted">Loading…</div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Toast container -->
          <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080">
            <div id="toastContainer"></div>
          </div>
          <!-- Upload modal (Bootstrap) -->
          <div
            class="modal fade"
            id="resourceUploadModal"
            tabindex="-1"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <form
                id="resourceUploadForm"
                class="modal-content"
                enctype="multipart/form-data"
              >
                <div class="modal-header">
                  <h5 class="modal-title">Upload resource</h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <div class="mb-3">
                    <label for="resourceFiles" class="form-label"
                      >Select image(s)</label
                    >
                    <input
                      id="resourceFiles"
                      name="resources"
                      class="form-control"
                      type="file"
                      accept="image/*"
                      multiple
                      required
                    />
                    <div class="form-text">
                      Allowed: JPG, PNG, GIF, WEBP. Max size enforced on server.
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="resourceTag" class="form-label"
                      >Tag / Title for these resources</label
                    >
                    <input
                      id="resourceTag"
                      name="tag"
                      class="form-control"
                      type="text"
                      placeholder="e.g. hotel pass / lunch menu"
                      required
                    />
                    <div class="form-text">
                      This tag will display on each created resource card.
                    </div>
                  </div>

                  <div
                    id="uploadWarning"
                    class="text-danger small"
                    style="display: none"
                  ></div>
                </div>

                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    id="uploadResourcesBtn"
                    type="submit"
                    class="btn btn-primary"
                  >
                    Upload
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Image viewer modal (click image to open bigger) -->
          <div
            class="modal fade"
            id="resourceImageModal"
            tabindex="-1"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered modal-lg">
              <div class="modal-content">
                <div class="modal-body p-0">
                  <img
                    id="resourceImageModalImg"
                    src=""
                    alt=""
                    style="width: 100%; height: auto; display: block"
                  />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <a
                    id="resourceImageModalDownload"
                    class="btn btn-primary"
                    href="#"
                    download
                    >Download</a
                  >
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </body>
  </div>

  <footer><%- include('../partials/FS_Footer'); %></footer>
</html>
